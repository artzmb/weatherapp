<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
    </style>

    <style name="TextAppearance.TextField">
        <item name="android:textSize">@dimen/text_text_field_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_text_field_line</item>
    </style>

    <style name="TextAppearance.TextField.Hint">
        <item name="android:textSize">@dimen/text_text_field_hint_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_text_field_hint_line</item>
    </style>

    <style name="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_button_line</item>
    </style>

    <style name="Theme.Cowboys.ShapeAppearanceSmall"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/normal_50</item>
    </style>

    <style name="Theme.Cowboys.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">
            @style/Theme.Cowboys.ShapeAppearanceSmall
        </item>
        <item name="android:textAppearance">@style/TextAppearance.TextField</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextField.Hint</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Theme.Cowboys.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="shapeAppearance">@style/Theme.Cowboys.ShapeAppearanceSmall</item>
    </style>
</resources>